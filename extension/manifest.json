{
  "manifest_version": 3,
  "name": "AI Security Agent",
  "description": "Browser DLP agent that prevents sensitive data from being sent to AI/LLM tools. Detects PII, credentials, source code, and more in real-time.",
  "version": "1.0.0",
  "permissions": [
    "activeTab",
    "storage",
    "notifications",
    "tabs",
    "clipboardRead"
  ],
  "host_permissions": [
    "http://localhost:3001/*",
    "https://ai-security-extension-production.up.railway.app/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": [
        "*://chat.openai.com/*",
        "*://chatgpt.com/*",
        "*://claude.ai/*",
        "*://gemini.google.com/*",
        "*://aistudio.google.com/*",
        "*://copilot.microsoft.com/*",
        "*://perplexity.ai/*",
        "*://chat.mistral.ai/*",
        "*://grok.x.ai/*",
        "*://chat.deepseek.com/*",
        "*://huggingface.co/*",
        "*://coral.cohere.com/*",
        "*://cursor.sh/*",
        "*://codeium.com/*"
      ],
      "js": ["prompt-interceptor.js"],
      "run_at": "document_idle"
    },
    {
      "matches": ["<all_urls>"],
      "js": ["clipboard-monitor.js"],
      "run_at": "document_idle"
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon-16.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    }
  },
  "icons": {
    "16": "icons/icon-16.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  }
}
